<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jmir.MainPage">

  <ScrollView>
    <StackLayout>
      <Entry x:Name="Rounds" Placeholder="Enter number of rounds"/>
      <Button Clicked="Button_OnClicked" x:Name="StartButton" />
      <Label Text="Running ..." IsVisible="False" x:Name="RunningLabel"/>
      <Editor AutoSize="TextChanges" Text="{Binding Logs}" />
    </StackLayout>
  </ScrollView>
</ContentPage>
